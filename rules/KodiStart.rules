rule "Kodi init"
when
    System started
then
    
    if (TR_TermostatoApagado.state == NULL ||TR_TermostatoApagado.state == "") {
        TR_TermostatoApagado.postUpdate("OFF")
    }
    
    if (TR_TermostatoEncendido.state == NULL ||TR_TermostatoEncendido.state == "") {
        TR_TermostatoEncendido.postUpdate("OFF")
    }
    TR_ModoManual.sendCommand(OFF)
    if (TR_TemperaturaInicio.state == NULL) {
        TR_TemperaturaInicio.postUpdate(16)
    }
    if (TR_TemperaturaFin.state == NULL) {
        TR_TemperaturaFin.postUpdate(22)
    }
    
end